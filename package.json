{
    "name": "typescript-restify-api",
    "version": "0.0.1",
    "description": "restify-stub-api",
    "license": "MIT",
    "repository": "https://patricknolan@bitbucket.org/patricknolan/typescript-restify-api.git",
    "author": "Delta Ready Technology Pty Ltd",
    "keywords": [
        "restify",
        "typescript"
    ],
    "files": [
        "lib"
    ],
    "main": "lib/server.js",
    "typings": "lib/server.d.ts",
    "scripts": {
        "clean": "rimraf lib",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
        "build": "npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
        "postinstall": "npm run build",
        "start": "npm run build && node lib/server.js | bunyan",
        "test": "npm run build && cross-env NODE_ENV=test mocha --nolazy --require source-map-support/register --require ts-node/register --recursive test/**/*.spec.ts",
        "watch": "concurrently -rk \"npm run build -- --watch\" \"nodemon --nolazy --inspect=0.0.0.0:9229 -d 20 lib/server.js | bunyan\"",
        "watch:test": "npm run test -- --watch-extensions",
        "watch:test:debug": "npm run watch:test -- --inspect-brk=0.0.0.0:9229"
    },
    "dependencies": {
        "bunyan": "^1.8.12",
        "config": "^1.29.4",
        "jsonwebtoken": "^8.1.1",
        "restify": "^6.3.4",
        "restify-cors-middleware": "^1.1.0",
        "restify-jwt-community": "^0.5.4"
    },
    "devDependencies": {
        "@types/bunyan": "^1.8.4",
        "@types/chai": "^4.1.2",
        "@types/config": "0.0.33",
        "@types/jsonwebtoken": "^7.2.5",
        "@types/mocha": "^2.2.48",
        "@types/restify": "^5.0.7",
        "@types/restify-cors-middleware": "^1.0.1",
        "@types/supertest": "^2.0.4",
        "chai": "^4.1.2",
        "concurrently": "^3.5.1",
        "cross-env": "^5.1.3",
        "mocha": "^4.1.0",
        "nodemon": "^1.14.12",
        "supertest": "github:visionmedia/supertest",
        "ts-node": "^3.3.0",
        "tslint": "^5.9.1",
        "typescript": "^2.7.1"
    },
    "engines": {
        "node": ">=8.0.0"
    }
}
