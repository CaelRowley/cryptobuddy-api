{
    "compilerOptions": {
        "declaration": true,
        "lib": ["dom", "es5", "es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "target": "es6",
        "preserveConstEnums": true,
        "removeComments": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceRoot": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*-spec.ts"
    ]
}
